if [ -n "$DEFAULT_INSTALLPATH" ]; then # we're running the installer

#	HELLO_IN_LANGUAGE=" -- Prey kommer att köras på svenska!"
	WHERE_TO_INSTALL_PREY=" -> Var vill du installera Prey? [$DEFAULT_INSTALLPATH] "
	USING_DEFAULT_INSTALL_PATH=" -- Bra, använder standardsökvägen..."
	INVALID_INSTALL_PATH=" !! Ogiltig installationssökväg. Huvudmappen existerar inte!\n"
	SETTING_INSTALL_PATH=" -- Ok, använder $INSTALLPATH som installationssökväg."

	DELETING_OLD_FILES=" -- Raderar gamla installationsfiler för Prey...\n"
	CONFIG_FILE_EXISTS=" -> Konfigurationsfil existerar! Vill du hoppa över alla tråkiga frågor? (Ej rekommenderat) [n] "

	SKIP_INSTALL_QUESTIONS=" -- Ok, vi uppdaterar bara nödvändiga filer!\n"

	ENTER_EMAIL_ADDRESS=" -> Vilken epostadress vill du att Prey ska skicka epost till? (t.ex. dittnamn@dindoman.se) [] "
	INVALID_EMAIL_ADDRESS=" !! Du måste ange en epostadress. Avslutar...\n"

	ENTER_SMTP_SERVER=" -> Vilken SMTP-server ska Prey använda? (inkl. port) [smtp.gmail.com:587] "
	DEFAULT_SMTP_SERVER=" -- Då använder vi Gmail! "
	ENTER_SMTP_USER=" -> Skriv in ditt SMTP användarnamn: (t.ex. dittnamn@gmail.com)"
	DEFAULT_SMTP_USER=" -- Ok, vårt SMTP användarnamn kommer att vara" # the installer appends the email var
	ENTER_SMTP_PASS=" -> Skriv in ditt SMTP lösenord: (Det kommer inte att visas i klartext) [] "
	INVALID_SMTP_PASS=" !! Du måste skriva in ett giltigt lösenord. Avslutar...\n"
	YES_NO="y/n"
	YES="y"
	CHECK_URL_OR_NOT=" -- Vill du att Prey ska kontrollera en URL? (Nej, innebär att en rapport skickas var gång datorn startas) [n] "
	ENTER_URL=" -- Ok, vilket URL ska vi kontrollera? [t.ex. http://minserver.se/prey_check_url] "
	INVALID_URL=" !! Du måste ange en URL. Exiting...\n"
	SET_TIMING=" -- Ok, sista frågan. Hur ofta (i minuter) vill du att Prey ska köras? [$TIMING] "

	INSTALLING_SOFTWARE=" -- Ok, installerar nödvändig mjukvara...\n"
	COPYING_ISIGHTCAPTURE=" -- Kopierar iSightCapture till $INSTALLPATH..."
	COPYING_FILES="\n -- Kopierar nödvändaiga filer till $INSTALLPATH och sätter rättigheter..."
	ADDING_CRONTAB=" -- Lägger till crontab..."
	INSTALL_OK="\033[1m\n -- Allt OK! Prey är uppe och kör nu. Du kan nu radera denna mapp.
 -- Om du vill avinstallera Prey, radera $INSTALLPATH denna mapp
    och ta bort Prey i root's crontab: \n
\t $ sudo rm -Rf $INSTALLPATH\n \t $ sudo crontab -l | grep -v prey | sudo crontab -\n
 -- Kom ihåg att besöka http://prey.bootlog.org för uppdateringar!\033[0m\n\n"

else # prey status messages

	STRING_START="\n ### PREY $version sprider ut sina vingar!\n"
	STRING_TRY_TO_CONNECT=" -- Försöker ansluta till öppna trådlösa nätverk..."
	STRING_NO_CONNECT_TO_WIFI=" -- Kunde inte ansluta till ett öppet trådlöst nät!"
	STRING_CHECK_URL=" -- Kontrollerar URL..."
	STRING_NO_PROBLEM=" -- Inget att oroa sig över. :)\n"
	STRING_PROBLEM=" -- Hoppla!!"
	STRING_WRITE_EMAIL=" -- Skapar epostmeddelande..."
	STRING_SENDING_EMAIL=" -- Skickar report..."
	STRING_ERROR_EMAIL="\n\033[1m !! Det gick inte att skicka epost. Är du säker på att inställningarna är korrekta?
		Om du använder Gmail, testa att ta bort '@gmail.com' i användarnamnet för SMTP i Preys konfigurationsfil.\033[0m\n"
	STRING_REMOVE_EVIDENCE=" -- Tar bort alla spår av bevis..."
	STRING_DONE=" -- Klar! Lycka till med jakten! :)\n"

fi
